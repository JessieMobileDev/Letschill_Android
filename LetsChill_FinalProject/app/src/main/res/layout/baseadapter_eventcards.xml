<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:corner_radius="5dp">

        <ImageView
            android:id="@+id/card_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:alpha="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10 people joined"
                style="@style/eventCards_contentText_style"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10 RSVPs"
                style="@style/eventCards_contentText_style"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="20dp" />
        </FrameLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>


    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/transparent_toplayer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/black"
        android:alpha="0.5"
        android:layout_gravity="top"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:corner_radius="5dp">

        <TextView
            android:id="@+id/title_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of event"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            style="@style/eventCards_titleText_style" />

        <ImageView
            android:id="@+id/icon_time_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_white_24dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/time_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of event"
            style="@style/eventCards_contentText_style"
            android:layout_marginTop="40dp"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:id="@+id/icon_location_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_white_24dp"
            android:layout_marginTop="62dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/location_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/eventCards_contentText_style"
            android:text="Location of the event"
            android:layout_marginTop="67dp"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:id="@+id/icon_host_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_white_24dp"
            android:layout_marginTop="87dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hosted by Jessica Oliveira"
            style="@style/eventCards_contentText_style"
            android:layout_marginTop="92dp"
            android:layout_marginStart="60dp"/>

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
</FrameLayout>