<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_createEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/frame_inside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView_editProfile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/create_back"
                android:contentDescription="@string/none"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <android.support.constraint.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline11"
                app:srcCompat="@drawable/ic_person_gray_24dp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_fullName"
                app:srcCompat="@drawable/ic_person_gray_24dp" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="@string/profile_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title2"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/profile_username"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title3"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/profile_email"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView12" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title4"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/profile_phone"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView15" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title5"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/profile_phone"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_phone" />

            <TextView
                android:id="@+id/textView_editProfile_fullName_title6"
                style="@style/profile_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/profile_interests"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_fb" />

            <EditText
                android:id="@+id/editText_editProfile_fullName"
                style="@style/createEvent_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title" />

            <EditText
                android:id="@+id/editText_editProfile_username"
                style="@style/createEvent_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title2" />

            <EditText
                android:id="@+id/editText_editProfile_email"
                style="@style/createEvent_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="email@provider.com"
                android:inputType="textEmailAddress"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title3" />

            <EditText
                android:id="@+id/editText_editProfile_phone"
                style="@style/createEvent_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="(000) 000-0000"
                android:inputType="phone"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title4" />

            <EditText
                android:id="@+id/editText_editProfile_fb"
                style="@style/createEvent_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="email@facebook.com"
                android:inputType="textEmailAddress"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title5" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_username"
                app:srcCompat="@drawable/ic_email_grey_24dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView12"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_email"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView15"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_phone"
                app:srcCompat="@drawable/ic_facebook_grey" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/editText_editProfile_fb"
                app:srcCompat="@drawable/ic_whatshot_gray_24dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

            <TextView
                android:id="@+id/textView_editProfile_interests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline12"
                app:layout_constraintStart_toStartOf="@+id/textView_editProfile_fullName_title6"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title6" />

            <Button
                android:id="@+id/button_editProfile_interests"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_edit_orange_24dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_editProfile_fullName_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_editProfile_fullName_title6" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_notVerified"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="#DE8282"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/frame_inside"
                app:layout_constraintTop_toBottomOf="@id/textView_verifiedMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView_editProfile_verified"
                    style="@style/profile_notVerified"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/profile_notVerified"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView_verifiedMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_verifyRequirements"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="512dp"
                app:layout_constraintTop_toBottomOf="@id/textView_editProfile_interests"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/constraint_notVerified"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>