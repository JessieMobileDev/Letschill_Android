<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Used for the bottom line of Edit Texts when not selected -->
    <style name="edittext_notselected">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- Edit Text Padding, Font and Background -->
    <style name="editText_signIn_style">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/edittext_style</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button (orange) Background and Font -->
    <style name="button_orange_style">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button (red) Background and Font -->
    <style name="button_red_style">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Clickable TextView -->
    <style name="clickable_textViews">
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom card text style -->
    <style name="eventCards_text_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Custom card title -->
    <style name="eventCards_titleText_style" parent="eventCards_text_style">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom card content text -->
    <style name="eventCards_contentText_style" parent="eventCards_text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Create Event Edit Texts style -->
    <style name="createEvent_editText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
